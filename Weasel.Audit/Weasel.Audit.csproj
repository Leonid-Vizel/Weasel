<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>$(AssemblyName)</Title>
    <VersionPrefix>1.0.3</VersionPrefix>
    <Company>Vizel Leonid</Company>
    <Product>Weasel</Product>
    <Authors>Vizel Leonid</Authors>
    <Description>User actions audit library</Description>
    <PackageReleaseNotes>Rebuilding the update and display infrastructure</PackageReleaseNotes>
    <PackageIcon>weasel.png</PackageIcon>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Weasel Audit</PackageTags>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <RepositoryUrl>https://github.com/Leonid-Vizel/Weasel</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Leonid-Vizel/Weasel</PackageProjectUrl>
    <Copyright>Leonid Vizel</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\weasel.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.13" />
    <PackageReference Include="Weasel.Tools.Extensions.Common" Version="1.0.4" />
  </ItemGroup>

</Project>
